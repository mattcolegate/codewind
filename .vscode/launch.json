    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/test/node_modules/mocha/bin/_mocha",
            "args": [
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/test/src/",
                "--recursive",
                "--exit"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "cwd": "${workspaceFolder}/test"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Current File",
            "program": "${workspaceFolder}/test/node_modules/mocha/bin/_mocha",
            "args": [
                "--colors",
                "--timeout",
                "999999",
                "${file}"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Codewind",
            "address": "127.0.0.1",
            "port": 34000,
            "localRoot": "${workspaceFolder}/src/pfe/portal",
            "remoteRoot": "/portal"
        },
        {
            "type": "node",
            "name": "Debug Tues10Node1",
            "request": "attach",
            "address": "127.0.0.1",
            "localRoot": "c:\\cw-projs\\Tues10Node1",
            "remoteRoot": "/app",
            "restart": true
        },
        {
            "type": "java",
            "name": "Debug Mon09Micro1",
            "request": "attach",
            "hostName": "127.0.0.1",
            "projectName": "Mon09Micro1"
        }
    ]
}
